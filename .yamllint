---
extends: default
ignore: |
  .github/
  meta/
  roles/*.*/
  roles/iac-role-basica/

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  line-length: disable
  truthy:
    allowed-values: [
      'False',
      'false',
      'true',
      'True',
      'no',
      'yes'
    ]
    check-keys: true
